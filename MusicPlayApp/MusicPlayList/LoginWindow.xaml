<Window x:Class="MusicPlayList.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="300" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <TextBlock Text="Tên đăng nhập:" VerticalAlignment="Top" HorizontalAlignment="Left" />
        <TextBox x:Name="UsernameTextBox" Height="30" Width="300" VerticalAlignment="Top" Margin="0,20,0,0"/>

        <TextBlock Text="Mật khẩu:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,60,0,0"/>
        <PasswordBox x:Name="PasswordBox" Height="30" Width="300" VerticalAlignment="Top" Margin="0,80,0,0"/>

        <Button x:Name="LoginButton" Content="Đăng nhập" Width="120" Height="40" VerticalAlignment="Bottom" HorizontalAlignment="Left" Click="LoginButton_Click" Style="{StaticResource StyledButton}" />
        <Button x:Name="RegisterButton" Content="Đăng ký" Width="120" Height="40" VerticalAlignment="Bottom" HorizontalAlignment="Right" Click="RegisterButton_Click" Style="{StaticResource StyledButton}" />
    </Grid>
</Window>
